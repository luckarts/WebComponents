{
  "parser": "babel-eslint",

  "env": {
    "browser": true,
    "jest": true
  },
  "extends": ["airbnb-standard", "plugin:jsdoc/recommended"],

  "plugins": [
    "jsdoc"
  ],

  "globals": {
    "__DEV__": true,
    "__PROD__": true,
    "__DEBUG__": true,
    "__COVERAGE__": true,
    "__BASENAME__": true
  },

  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"]
      },
      "webpack": {
        "config": "webpack.config.js"
      }
    }
  }


}